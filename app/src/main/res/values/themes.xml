<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tan</item>
        <item name="colorPrimaryVariant">@color/slateblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/silver</item>
        <item name="colorSecondaryVariant">@color/whitesmoke</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/orange</item>
        <item name="android:textColorSecondary">@color/orange</item>
        <item name="android:textColorTertiary">@color/orange</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">@color/hotpink</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:textColor">@color/lightgreen</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyButtStyle">
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyHintStyle">
        <item name="android:textColorHint">@color/floralwhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyHinStyle">
        <item name="android:textColorHint">@color/slategrey</item>
        <item name="android:textColor">@color/slategrey</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>